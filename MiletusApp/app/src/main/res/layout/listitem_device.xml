<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/device_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:contentDescription="@string/image_description_device_icon"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_wifi_enabled" />

        <TextView
            android:id="@+id/device_title"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/device_picture"
            android:layout_toRightOf="@id/device_picture"
            tools:text="My device" />

        <ImageView
            android:id="@+id/ble_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/device_title"
            android:layout_toRightOf="@id/device_title"
            android:contentDescription="@string/image_description_device_icon"
            android:src="@drawable/bt_ico" />

        <TextView
            android:id="@+id/device_description"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/device_title"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/device_picture"
            android:layout_toRightOf="@id/device_picture"
            android:textColor="@android:color/tertiary_text_light"
            tools:text="WIFI" />

        <ImageView
            android:id="@+id/arrow_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/image_description_device_icon"
            android:maxHeight="24dp"
            android:maxWidth="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_next" />

    </RelativeLayout>
</android.support.v7.widget.CardView>